knitr::opts_chunk$set(echo = TRUE, message=FALSE, warning=FALSE)
library(tidyverse)
library(lubridate)
source("../../scripts/viridis.R")
source("../../scripts/ggprob.R")
## Read and transform the Madison weather data
mw <- read_csv("../../data/madison-weather-2020-clean-2.csv")
mw_july <- mw %>%
filter(month=="Jul") %>%
filter(year < 1899 | year > 1990) %>%
group_by(year) %>%
summarize(tavg = mean(tavg)) %>%
mutate(era = case_when(
year < 1900 ~ "early",
year > 1989 ~ "recent"))
mw_july
mw_july %>%
group_by(era)
mw_july %>%
group_by(era) %>%
summarize(mean=mean(tavg))
mw_july %>%
group_by(era) %>%
summarize(mean=mean(tavg), sd =sd(tavg))
sum_mw_july<- mw_july %>%
group_by(era) %>%
summarize(mean=mean(tavg), sd=sd(tavg))
sum_mw_july
ggplot(sum_mw_july, aes(x=mean[1])) +
geom_density()
sum_mw_july %>%
ggplot(sum_mw_july, group=era, aes(x=mean)) +
geom_density()
ggplot(sum_mw_july, group=era, aes(x=mean)) +
geom_density()
ggplot(sum_mw_july, group=era, aes(x=mean)) +
geom_density()
ggplot(sum_mw_july, group=era) +
geom_density(aes(x=mean))
ggplot(mw_july) +
geom_density(aes(x=tavg), color=era)
ggplot(mw_july, color=era) +
geom_density(aes(x=tavg))

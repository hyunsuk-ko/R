predict_y <- function(x){
## x = radius (on original scale)
slope <- coef(lm1)[2]
intercept <- coef(lm1)[1]
logy <- intercept + slope*log10(x)
y <- 10^logy
names(y) <- "predicted mass"
return(y)
}
